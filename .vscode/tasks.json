{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start FastAPI Backend",
			"type": "shell",
			"command": "${workspaceFolder}\\.venv\\Scripts\\python.exe -m uvicorn backend.main:app --reload --host localhost --port 8000",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "Start Vite Frontend",
			"type": "npm",
			"script": "dev",
			"path": "frontend/",
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "Start Dev Servers",
			"dependsOn": [
				"Start FastAPI Backend",
				"Start Vite Frontend"
			],
			"dependsOrder": "parallel",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": []
		}
	]
}